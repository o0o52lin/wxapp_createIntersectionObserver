.intro {
  text-align: center;
}
.nav{
  justify-content: center;
  align-items: center;
  display: flex;
}
.nav{
  width: 100%;
  height: 40px;
  background: #eee;
  color:#999
}

.fixed{
  position: fixed;
  top:0;
  left: 0;
}
.nav-item{
  padding: 20rpx 10rpx;
}
.nav-item.hit text{
  color:red
}
.item{
  border:1px #ccc dashed;
  height:150vh;
}
.item-bottom{
  border:1px #fff solid;
  height:100rpx;
  width:100rpx;
  border-radius: 50rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  position: fixed;
  right: 10rpx;
  bottom: 30rpx;
  font-size: 24rpx;
  background: rgba(255,255,255,1);
  z-index: 999;
  color: #333
}
.area{
  position: fixed;
  background:rgba(255,0,0,0.1);
  z-index:998;
  border:1px red dashed;
  color: rgba(255,0,0,0.6);
  justify-content: center;
  align-items: center;
  display: flex;
}